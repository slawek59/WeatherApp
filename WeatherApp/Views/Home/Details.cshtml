@using WeatherApp.Models
@model CityWeather

<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8" />
	<link href="~/StyleSheet (1).css" rel="stylesheet" />
</head>
<body>
	<div class="page-content">
		<table class="box w-25">
			<tbody>
				<tr>
					<td>
						<p>@Model.CityName</p>
						<p>@Model.DateAndTime.ToShortDateString()</p>
						<p>@Model.DateAndTime.ToShortTimeString()</p>
					</td>
					<td class="border-left padding-left-45">
						<p>@Model.TemperatureFahrenheit <bold>F</bold></p>
					</td>
				</tr>
			</tbody>
		</table>
		<p>
			<a href="/">Back to Weather Home Page</a>
		</p>
	</div>
</body>
</html>