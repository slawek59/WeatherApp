@model IEnumerable<CityWeather>


<!DOCTYPE html>
<html>
<head>
	<title>Weather App by Vonzo</title>
	<meta charset="utf-8" />
	<link href="~/StyleSheet (1).css" rel="stylesheet" />
</head>
<body>
	<div class="page-content">
		<div class="header">
			<h1>Welcome to the worlds greatest WEATHER APP!</h1>
		</div>
		<h2 class="text-center">Carefully crafted by Slavomiro Vonzo himself</h2>

		<div class="margin-left">
			<table>
				<tbody>
					@foreach (CityWeather city in Model)
					{
						if (city.TemperatureFahrenheit < 44)
						{
							<tr class="box w-25 inline-block blue-back">
								<td class="w-75">
									<p>
										<b>@city.CityName</b>
									</p>
									<p class="text-dark-grey">
										<font size="2"><b> @city.DateAndTime.ToShortTimeString() AM</b></font>
									</p>

									<font size="2"> <a href="weather/@city.CityUniqueCode">Details</a></font>
								</td>
								<td class="border-left padding-left w-50">
									<p>
										<b>@city.TemperatureFahrenheit</b> <span class="text-grey"><b><sup>&#176F</sup></b></span>
									</p>
								</td>
							</tr>
						}
						else if (city.TemperatureFahrenheit >= 44 && city.TemperatureFahrenheit <= 74)
						{
							<tr class="box w-25 inline-block green-back">
								<td class="w-75">
									<p>
										<b>@city.CityName</b>
									</p>
									<p class="text-dark-grey">
										<font size="2"><b> @city.DateAndTime.ToShortTimeString() AM</b></font>
									</p>

									<font size="2"> <a href="weather/@city.CityUniqueCode">Details</a></font>
								</td>
								<td class="border-left padding-left w-50">
									<p>
										<b>@city.TemperatureFahrenheit</b> <span class="text-grey"><b><sup>&#176F</sup></b></span>
									</p>
								</td>
							</tr>
						}
						else if (city.TemperatureFahrenheit > 74)
						{
							<tr class="box w-25 inline-block orange-back">
								<td class="w-75">
									<p>
										<b>@city.CityName</b>
									</p>
									<p class="text-dark-grey">
										<font size="2"><b> @city.DateAndTime.ToShortTimeString() AM</b></font>
									</p>

									<font size="2"> <a href="weather/@city.CityUniqueCode">Details</a></font>
								</td>
								<td class="border-left padding-left w-50">
									<p>
										<b>@city.TemperatureFahrenheit</b> <span class="text-grey"><b><sup>&#176F</sup></b></span>
									</p>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>