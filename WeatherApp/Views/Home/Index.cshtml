@model IEnumerable<CityWeather>


<!DOCTYPE html>
<html>
<head>
	<title>Weather App by Vonzo</title>
	<meta charset="utf-8" />
	<link href="~/StyleSheet (1).css" rel="stylesheet" />
</head>
<body>
	<div class="page-content">
		<h1>Welcome to the worlds greatest WEATHER APP!</h1>
		<h2>Carefully crafted by Slavomiro Vonzo himself</h2>

		<div>
			<table>
				<tbody>
					@foreach (CityWeather city in Model)
					{
						if (city.TemperatureFahrenheit < 44)
						{
							<tr class="box w-25 inline-block blue-back">
								<td class="w-75">
									<p>
										@city.CityName
									</p>
									<p>
										@city.DateAndTime.ToShortTimeString()
									</p>

									<a href="weather/@city.CityUniqueCode">Details</a>
								</td>
								<td class="border-left padding-left-45">
									<p>
										@city.TemperatureFahrenheit
									</p>
								</td>
							</tr>
						}
						else if (city.TemperatureFahrenheit >= 44 && city.TemperatureFahrenheit <= 74)
						{
							<tr class="box w-25 inline-block green-back">
								<td class="w-75">
									<p>
										@city.CityName
									</p>
									<p>
										@city.DateAndTime.ToShortTimeString()
									</p>

									<a href="weather/@city.CityUniqueCode">Details</a>
								</td>
								<td class="border-left padding-left-45">
									<p>
										@city.TemperatureFahrenheit
									</p>
								</td>
							</tr>
						}
						else if (city.TemperatureFahrenheit > 74)
						{
							<tr class="box w-25 inline-block orange-back">
								<td class="w-75">
									<p>
										@city.CityName
									</p>
									<p>
										@city.DateAndTime.ToShortTimeString()
									</p>

									<a href="weather/@city.CityUniqueCode">Details</a>
								</td>
								<td class="border-left padding-left-45">
									<p>
										@city.TemperatureFahrenheit
									</p>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>